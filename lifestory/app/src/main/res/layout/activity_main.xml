<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Google Sign-In Button -->
    <com.google.android.gms.common.SignInButton
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Welcome Header -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LifeStory"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Main Buttons -->
    <Button
        android:id="@+id/publicZoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public Zone (View Stories)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/helpToolBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help Tool (Writing Tools)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/speakStoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speak Your Story"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/manageProjectsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Your Projects"
        android:layout_marginBottom="16dp" />
</LinearLayout>
